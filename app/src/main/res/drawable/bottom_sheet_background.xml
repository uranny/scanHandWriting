<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 그림자 레이어 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#20000000" /> <!-- 그림자 색상 (투명도 포함) -->
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" /> <!-- 모서리 반경 설정 -->
            <padding
                android:top="3dp"
                android:left="2dp"
                android:right="2dp"/>
        </shape>
    </item>

    <!-- 실제 배경 레이어 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- 기존 배경 색상 -->
            <corners
                android:topLeftRadius="20dp"
                android:topRightRadius="20dp" /> <!-- 모서리 반경 설정 -->
        </shape>
    </item>
</layer-list>
